<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"
        android:top="0sp"
        android:bottom="0sp"
        android:width="30dp"
        android:height="30dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/white_trans"/>
            <corners android:radius="1sp"/>
            <stroke android:color="#8e8e8e"
                android:width="1dp"/>
        </shape>
    </item>

    <item android:state_checked="true"
        android:top="0sp"
        android:bottom="0sp"
        android:width="30dp"
        android:height="30dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_trans"/>
            <corners android:radius="1sp"/>
            <stroke android:color="#8e8e8e"
                android:width="1dp"/>
        </shape>
    </item>

</selector>